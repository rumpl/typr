    "@tiptap/react": "^3.13.0",
    "@tiptap/starter-kit": "^3.13.0",
    "chokidar": "^5.0.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "fs-extra": "^11.3.2",
    "lowlight": "^3.3.0",
    "lucide-react": "^0.556.0",
    "marked": "^17.0.1",
    "react": "^19.2.1",
